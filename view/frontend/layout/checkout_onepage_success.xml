        <referenceContainer name="content">
            <block class="Mastercard\Mastercard\Block\ClearCheckoutData"
                   name="clear.checkout.data"
                   template="Mastercard_Mastercard::clear_checkout_data.phtml"/>
        </referenceContainer>
    </body>
</page>

